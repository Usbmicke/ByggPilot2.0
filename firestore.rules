
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lås allting som standard
    match /{document=**} {
      allow read, write: if false;
    }

    // Tillåt användare att läsa, skapa och uppdatera sina egna projekt.
    // `read` täcker `get` och `list` (för frågor som i listProjects).
    // `create` täcker `addDoc` (för createProject).
    // `update` täcker `updateDoc` (för att lägga till Drive-mappens ID).
    match /projects/{projectId} {
      allow read, update: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }
  }
}
