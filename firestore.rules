
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================================================================
    // ANVÄNDARE (Users)
    // =================================================================================
    // Regel: Användare kan bara läsa och skriva sin EGEN användardata.
    // De kan skapa sin egen post, men aldrig läsa andras.
    // =================================================================================
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // =================================================================================
    // EXEMPEL PÅ FRAMTIDA REGEL (t.ex. för Projekt)
    // =================================================================================
    // Regel: Användare kan läsa/skriva ett projekt om deras UID matchar
    // projektets `userId`-fält.
    // =================================================================================
    match /projects/{projectId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Lägg till regler för andra collections här (customers, invoices, etc.)
    // med samma säkerhetsprincip:
    // match /customers/{customerId} {
    //   allow read, write: if request.auth.uid == resource.data.userId;
    // }
  }
}
